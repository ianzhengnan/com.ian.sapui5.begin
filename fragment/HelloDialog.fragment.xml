<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >


	<Dialog
		title="Hello {/recipient/name}">
		<content>
			<core:Icon
				src="sap-icon://competitor"
				size="8rem"
				class="sapUiMediumMargin"/>
		</content>
		<beginButton>
			<Button 
				text="{i18n>dialogCloseButtonText}"
				press="onCloseDialog"/>
		</beginButton>
	</Dialog>

</core:FragmentDefinition>